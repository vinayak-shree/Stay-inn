  <div class="card-body">
  <div class="btns" style="margin-top: 5rem; position: relative;"> 
<a href = "/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3 mb-3"> Edit</a>
   
 <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
